FROM golang:1.23-alpine

# Install ffmpeg for video processing
RUN apk add --no-cache ffmpeg curl

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o /api ./cmd/api

# Expose port
EXPOSE 8080

# Run the application
CMD ["/api"]
